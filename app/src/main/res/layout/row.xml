<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="12dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18sp"
        android:text="Abjad : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_abjad"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textColor="#ed7777"
        android:textSize="18sp"
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_kode_ruangan"
            android:text="Kode Ruangan : K2.0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_nama_ruangan"
            android:text="Nama Ruangan : Sekretariat Daerah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/txt_deskripsi"
            android:text="Deskripsi Ruangan : dasdasdasdasdasdasdasdasdasdasdasdasddasdasddsadassadsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>